.block
  .secondary-navigation
    %ul.wat-cf
      %li.first= link_to "#{t("web-app-theme.list", :default => "List")}", admin_services_path
      %li= link_to "#{t("web-app-theme.new", :default => "New")}", new_admin_service_path
      %li.active= link_to "#{t("web-app-theme.show", :default => "Show")}", admin_service_path
  .content
    .inner
      %p
        %strong
          = t("activerecord.attributes.admin_service.title", :default => t("activerecord.labels.title", :default => "Title"))
          \:
        = @service.title
      %p
        %strong
          = t("activerecord.attributes.admin_service.service_text", :default => t("activerecord.labels.service_text", :default => "Service text"))
          \:
        .formatted_text_area
          = @service.service_text.html_safe
      .wat-cf
        = link_to image_tag("web-app-theme/icons/application_edit.png", :alt => "#{t("web-app-theme.edit", :default=> "Edit")}") + " " + t("web-app-theme.edit", :default=> "Edit"), edit_admin_service_path(@service), :class => "button"
        = link_to image_tag("web-app-theme/icons/cross.png", :alt => "#{t("web-app-theme.delete", :default=> "Delete")}") + " " + t("web-app-theme.delete", :default => "Delete"), admin_service_path(@service), :method => "delete", :class => "button", :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}"
- content_for :sidebar, render(:partial => 'sidebar')
