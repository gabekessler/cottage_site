.block
  .secondary-navigation
    %ul.wat-cf
      %li.first= link_to "#{t("web-app-theme.list", :default => "List")}", admin_slideshow_images_path
      %li.active= link_to "#{t("web-app-theme.new", :default => "New")}", new_admin_slideshow_image_path
  .content
    %h2.title
      = t("web-app-theme.new", :default => "New")
      SlideshowImage
    .inner
      = form_for :slideshow_image, :url => admin_slideshow_images_path, :html => { :class => :form } do |f|
        = render :partial => "form", :locals => {:f => f}
- content_for :sidebar, render(:partial => 'sidebar')
