.block
  .secondary-navigation
    %ul.wat-cf
      %li.first.active= link_to "#{t("web-app-theme.list", :default => "List")}", admin_pages_path
      %li= link_to "#{t("web-app-theme.new", :default => "New")}", new_admin_page_path
  .content
    %h2.title
      = t("web-app-theme.all", :default => "All")
      Pages
    .inner
      %table.table
        %tr
          %th
            = t("activerecord.attributes.admin_page.page_title", :default => t("activerecord.labels.page_title", :default => "Page"))
          %th= t("web-app-theme.updated_at", :default => "Updated at")
          %th.last &nbsp;
        - @pages.each do |page|
          %tr{:class => cycle("odd", "even")}
            %td
              = link_to page.title, admin_page_path(page)
            %td
              = page.updated_at.strftime("%D")
            %td.last
              = link_to "#{t("web-app-theme.edit", :default => "Edit")}", edit_admin_page_path(page)
              |
              = link_to "#{t("web-app-theme.delete", :default => "Delete")}", admin_page_path(page), :method => :delete, :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}"
      .actions-bar.wat-cf
        .actions
- content_for :sidebar, render(:partial => 'sidebar')
