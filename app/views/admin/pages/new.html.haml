.block
  .secondary-navigation
    %ul.wat-cf
      %li.first= link_to "#{t("web-app-theme.list", :default => "List")}", admin_pages_path
      %li.active= link_to "#{t("web-app-theme.new", :default => "New")}", new_admin_page_path
  .content
    %h2.title
      = t("web-app-theme.new", :default => "New")
      Page
    .inner
      = form_for :page, :url => admin_pages_path, :html => { :class => :form, :multipart => true } do |f|
        = errors_for(@page).html_safe
        = render :partial => "form", :locals => {:f => f}
- content_for :sidebar, render(:partial => 'sidebar')
