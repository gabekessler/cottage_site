.group
  = f.label :title, t("activerecord.attributes.page.page_title", :default => "Title"), :class => :label
  %span.description This is for reference and URL purposes. Will not display on the site.
  = f.text_field :title, :class => 'text_field'
.group
  = f.label :heading, t("activerecord.attributes.page.heading", :default => "Heading"), :class => :label
  %span.description The heading that will appear on the page.
  = f.text_field :heading, :class => 'text_field'
  
.group#left_column
  = f.label :page_image_file_name, t("activerecord.attributes.page.page_image_file_name", :default => "Page image file name"), :class => :label
  = f.file_field  :page_image, :class => "file_upload"
  %br/
  %span.description
    Current Image:
  %p
    = @page.page_image_file_name ? (image_tag @page.page_image.url(:medium)) : "None"
  
.group#right_column
  = f.label :body, t("activerecord.attributes.page.body", :default => "Body"), :class => :label
  %span.description This is the main body text of the page.
  = f.text_area :body, :class => 'text_area'
  = render :partial => "/shared/text_editor", :locals => {:field => "page[body]"}

%br.clear  
.group
  = f.label :sidebar, t("activerecord.attributes.page.sidebar", :default => "Sidebar Item?"), :class => :label
  %span.description Check this box if this is a sidebar item. Meta information will not be used for sidebar items.
  %br/
  = f.check_box :sidebar, :class => 'check_box'

#meta_items
  %h3 Meta Data
  %p.meta_p These are items used for search engines. No formatting please.
  .group
    = f.label :page_title, t("activerecord.attributes.page.page_title", :default => "Page title"), :class => :label
    %span.description This is the title shown at the top of the browser window.
    = f.text_field :page_title, :class => 'text_field'
  .group
    = f.label :page_description, t("activerecord.attributes.page.page_description", :default => "Page description"), :class => :label
    %span.description Both this description and keywords show up in the source code. Used to feed search engines relevant information about the site and page.
    = f.text_area :page_description, :class => 'text_area'
    %span.description 
  .group
    = f.label :page_keywords, t("activerecord.attributes.page.page_keywords", :default => "Page keywords"), :class => :label
    = f.text_field :page_keywords, :class => 'text_field'
    %span.description 
%br.clear
.group.navform.wat-cf
  %button.button{:type => "submit"}
    = image_tag("web-app-theme/icons/tick.png", :alt => "#{t("web-app-theme.save", :default => "Save")}")
    = t("web-app-theme.save", :default => "Save")
  %span.text_button_padding= t("web-app-theme.or", :default => "or")
  = link_to t("web-app-theme.cancel", :default => "Cancel"), admin_pages_path, :class => "text_button_padding link_button"
