= form_for @page do |f|
  -if @page.errors.any?
    #error_explanation
      %h2= "#{pluralize(@page.errors.count, "error")} prohibited this page from being saved:"
      %ul
        - @page.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :page_title
    = f.text_field :page_title
  .field
    = f.label :page_description
    = f.text_area :page_description
  .field
    = f.label :page_keywords
    = f.text_field :page_keywords
  .field
    = f.label :heading
    = f.text_field :heading
  .field
    = f.label :body
    = f.text_area :body
  .field
    = f.label :sidebar
    = f.check_box :sidebar
  .field
    = f.label :page_image_file_name
    = f.text_field :page_image_file_name
  .field
    = f.label :page_image_content_type
    = f.text_field :page_image_content_type
  .field
    = f.label :page_image_file_size
    = f.text_field :page_image_file_size
  .field
    = f.label :page_image_updated_at
    = f.datetime_select :page_image_updated_at
  .actions
    = f.submit 'Save'
