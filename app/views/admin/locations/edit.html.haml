.block
  .secondary-navigation
    %ul.wat-cf
      %li.first= link_to "#{t("web-app-theme.list", :default => "List")}", admin_locations_path
      %li= link_to "#{t("web-app-theme.new", :default => "New")}", new_admin_location_path
      %li.active= link_to "#{t("web-app-theme.edit", :default => "Edit")}", edit_admin_location_path
  .content
    %h2.title
      = t("web-app-theme.edit", :default => "Edit")
      Location
    .inner
      = form_for @location, :url => admin_location_path(@location), :html => { :class => :form } do |f|
        = render :partial => "form", :locals => {:f => f}
- content_for :sidebar, render(:partial => 'sidebar')
